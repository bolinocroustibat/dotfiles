# ~/.bashrc: executed by bash(1) for non-login shells.

# Note: PS1 and umask are already set in /etc/profile. You should not
# need this unless you want different defaults for root.
# PS1='${debian_chroot:+($debian_chroot)}\h:\w\$ '
PS1='${debian_chroot:+($debian_chroot)}\u@$(hostname -f):\w\$ '
# umask 022

# You may uncomment the following lines if you want 'ls' to be colorized:
# export LS_OPTIONS='--color=auto --group-directories-first'
export LS_OPTIONS='--color=auto'
eval "`dircolors`"
alias ls='ls $LS_OPTIONS'
alias ll='ls $LS_OPTIONS -lAhF'
alias l='ls $LS_OPTIONS -lh'
alias df='df -h'                  # disk free with human reading
alias du='du -hd1 | sort -h'      # disk usage with human reading, only first level
alias ltail='tail -f'             # live tail

# Color log
ctail() { tail -f $1 | ccze -A; }
cless() { ccze -A < $1 | less -R; }

# Some more alias to avoid making mistakes:
#alias rm='rm -i'
#alias cp='cp -i'
#alias mv='mv -i'

# Micro as default editor for crontab
export EDITOR='micro'
