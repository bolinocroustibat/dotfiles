{{ ansible_managed | comment }}

# Prompt - user - if elevated privileges show red text, green otherwise
PROMPT="%{%(!.$fg_bold[red].$fg_bold[green])%}$USER"
PROMPT+="%{$fg_bold[white]%}@"

# Prompt - machine
{% if type == 'local-development' %}
PROMPT+='%{$fg_bold[cyan]%}%d%{$reset_color%} $(git_prompt_info)'
{% endif %}
{% if type == 'remote-web' %}
PROMPT+='%{$fg_bold[red]%}%M%d%{$reset_color%} $(git_prompt_info)'
{% endif %}
{% if type == 'remote-data' %}
PROMPT+='%{$fg_bold[yellow]%}%M%d%{$reset_color%} $(git_prompt_info)'
{% endif %}

# Prompt - prompt
PROMPT+="%(?:%{$fg_bold[green]%}➜%{$reset_color%} :%{$fg_bold[red]%}➜%{$reset_color%} )"

ZSH_THEME_GIT_PROMPT_PREFIX="%{$fg_bold[blue]%}git:(%{$fg[red]%}"
ZSH_THEME_GIT_PROMPT_SUFFIX="%{$reset_color%} "
ZSH_THEME_GIT_PROMPT_DIRTY="%{$fg[blue]%}) %{$fg[yellow]%}✗"
ZSH_THEME_GIT_PROMPT_CLEAN="%{$fg[blue]%})"
